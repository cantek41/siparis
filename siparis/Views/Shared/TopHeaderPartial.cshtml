                            <li><a href="https://twitter.com/modamcom" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.pinterest.com/modamcom/"><i class="fa fa-pinterest"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/header_top-->

    <div class="header-middle">
        <!--header-middle-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="logo pull-left">
                        <a href="@Url.Action("index","Home")">
                            @*<img src="~/Content/images/home/logo.png" />*@
                            <span style="font-family:Bahamas;color:#000000;font-size:40px;">@profilim.FirmaAdi </span>
                        </a>
                    </div>



                </div>
                <div class="col-sm-8">
                    <div class="shop-menu pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="../OrderFollow/Index"><i class="fa fa-crosshairs"></i> @siparis.Resorces.Language.Checkout</a></li>
                            <li><a href="@Url.Action("Chart","Order")"><i class="fa fa-shopping-cart"></i> @siparis.Resorces.Language.Cart</a></li>
                            <li><a href="@Url.Action("LogOff", "Account")"><i class="fa fa-power-off"></i> @siparis.Resorces.Language.LogOut </a></li>
                        </ul>


                    </div>
                </div>
            </div>
        </div><!--/header-middle-->




