@using siparis.Models



@{
    ProfileInfo profilim = (ProfileInfo)Session["profilim"];
}

    


<header id="header">
    <!--header-->
    <div class="header_top">
        <!--header_top-->
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contactinfo">
                        
                        <ul class="nav nav-pills">
                          
                            <li><a href="../Home/Contact"><i class="fa fa-phone"></i> @profilim.Telefon </a></li>
                            <li><a href="../Home/Contact"><i class="fa fa-envelope"></i>@profilim.Mail</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="social-icons pull-right">
                        <ul class="nav navbar-nav">
                            <li><a href="https://www.facebook.com/pages/modamcom/180760585455778" target="_blank">@profilim.FirmaAdi</a></li>
                            <li><a class="dil-hover" style="margin-top:8px;margin-right:8px;" href="@Url.Action("changeLanguage", "Base", new { lang ="TR"})"><b>TR</b>   </a></li>
