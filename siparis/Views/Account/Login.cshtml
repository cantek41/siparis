@model siparis.Models.LoginViewModel
@using siparis.Models

@{
    ViewBag.Title = @Res.resGetir(51);
    Layout = null;
}
<!--form-->
<div class="container">
    @using (Html.BeginForm("Login","Account",FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>@Res.resGetir(52)</h2>
                    @Html.TextBoxFor(model => model.TCode, null, new { placeholder = "Ticari Kod" })
                    @Html.TextBoxFor(model => model.UserName, null, new { placeholder = @Res.resGetir(9) })
                    @Html.PasswordFor(model => model.Password)

                    <span>
                        @Html.CheckBoxFor(model => model.RememberMe)
                        @Res.resGetir(75)
                    </span>
                    <button type="submit" class="btn btn-default">@Res.resGetir(23)</button>
                </div><!--/login form-->
            </div>
        </div>
    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}