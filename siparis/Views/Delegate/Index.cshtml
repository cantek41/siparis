@model IEnumerable<siparis.Models.STOKCARDViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
    var listItems = new List<SelectListItem>
    {
          new SelectListItem { Text = "Exemplo1", Value="Exemplo1" },
          new SelectListItem { Text = "Exemplo2", Value="Exemplo2" },
          new SelectListItem { Text = "Exemplo3", Value="Exemplo3" }
    };
}

<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.css" rel="stylesheet" />

<div class="col-md-12">
    <form class="form-horizontal" style="margin-top:20px;padding-left:0">
   
        
           
            <div class="col-md-4">
                <!-- Appended Input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="appendedtext">Firma Adı</label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <input id="appendedtext" name="appendedtext" class="form-control" placeholder="@siparis.Resorces.Language.Company" type="text" required="">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        </div>

                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="DeliveryAddressDropDown">@siparis.Resorces.Language.DeliveryAddress</label>
                    <div class="col-md-8">
                        <select id="DeliveryAddressDropDown" name="DeliveryAddressDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="WareHouseNameDropDown">@siparis.Resorces.Language.WareHouseName</label>
                    <div class="col-md-8">
                        <select id="WareHouseNameDropDown" name="WareHouseNameDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="DeliveryTypeDropDown">@siparis.Resorces.Language.DeliveryType</label>
                    <div class="col-md-8">
                        <select id="DeliveryTypeDropDown" name="DeliveryTypeDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="DeliveryDateDropDown">@siparis.Resorces.Language.DeliveryDate</label>
                    <div class="col-md-8">
                        <select id="DeliveryDateDropDown" name="DeliveryDateDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="DescriptionTextArea">@siparis.Resorces.Language.DescriptionText</label>
                    <div class="col-md-8">
                        <textarea class="form-control" id="DescriptionTextArea" name="DescriptionTextArea"></textarea>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
               

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="MainGroupDropDown">@siparis.Resorces.Language.MainGroup</label>
                    <div class="col-md-8">
                        <select id="MainGroupDropDown" name="MainGroupDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="SubGroupDropDown">@siparis.Resorces.Language.SubGroup</label>
                    <div class="col-md-8">
                        <select id="SubGroupDropDown" name="SubGroupDropDown" class="form-control">
                            <option value="1">Option one</option>
                            <option value="2">Option two</option>
                        </select>
                    </div>
                </div>

                <!-- Appended Input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Stock">Stok</label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <input id="Stock" name="Stock" class="form-control" placeholder="Stok" type="text" required="">
                            <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        </div>

                    </div>
                </div>
            </div>

    </form>

    @* grid *@
    <div class="row">
        <div class="col-md-8">
            @Html.DevExpress().GridView(settings =>
        {
            settings.Name = "gvOverview";
            //settings.KeyFieldName = "WAREHOUSE_ID;OPPORTUNITY_CODE;ROW_ORDER_NO;STOK_CODE";
            settings.CallbackRouteValues = new
            {
                Controller = "Delegate",
                Action = "saveWareHouse"

            };
            settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Delegate", Action = "updateWareHouse" };
            //settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
            settings.KeyFieldName = "ID";
            settings.CommandColumn.Visible = true;
            settings.CommandColumn.ShowEditButton = true;
            settings.CommandColumn.ShowNewButton = true;
            settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
            settings.Columns.Add(column =>
            {
                column.FieldName = "ID";
                column.Caption = "STOK KODU";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "NAME_TR";
                column.Caption = "STOK ADI";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "UNIT_PRICE";
                column.Caption = "STOK FİYAT";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "CUR_TYPE";
                column.Caption = "PARA BİRİMİ";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "UNIT";
                column.Caption = "MİKTAR";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "DES_TR";
                column.Caption = "AÇIKLAMA";
                column.ReadOnly = true;

            });
            settings.Columns.Add(column =>
            {
                column.FieldName = "CODE";
                column.Caption = "TESLİM TARİHİ";
                column.ReadOnly = true;

            });

        }).Bind(Model).GetHtml()

        </div>

    </div>
</div>
 








