<section>
    <div class="container">
        <div class="row">

            <div class="col-sm-9">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-7">
                        <div class="view-product">
                            <img src="@Model.STOKCARDPICTUREs.ElementAt(0).PATH" alt="" />
                            <h3>ZOOM</h3>
                        </div>
                        <div id="similar-product" class="carousel slide" data-ride="carousel">

                            <!-- Wrapper for slides -->
