
@{
    bool masterOnayla = false;
    bool masterEdit = false;
    bool masterDelete = false;
    string[] rol = Roles.GetRolesForUser();
    switch (rol[0])
    {
        case "Admin":
            masterOnayla = true;
            masterEdit = true;
            masterDelete = true;
            break;
        case "Bayi":
            if ((int)TempData["DOCUMENT_TYPE"] == 15 || (int)TempData["DOCUMENT_TYPE"] == 19)
